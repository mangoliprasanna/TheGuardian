<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/section_list_height">

    <TextView
        android:id="@+id/sectionLetter"
        android:text="A"
        android:textSize="@dimen/section_name_size"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sectionName"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/section_name_margin"
        android:textStyle="bold"
        android:layout_toRightOf="@id/sectionLetter"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/sectionId"
        android:layout_below="@id/sectionName"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_toRightOf="@id/sectionLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>